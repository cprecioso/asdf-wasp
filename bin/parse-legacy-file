#!/usr/bin/env bash

set -euo pipefail

file_path=$1

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

if [[ -f "$file_path" ]]; then
	# Find `version: "(.+)"`
	version=$(grep -E 'version:[[:space:]]*"([^"]+)"' "$file_path" | sed -E 's/.*version:[[:space:]]*"([^"]+)".*/\1/')

	if [[ -n "$version" ]]; then
		if [[ "$version" == ^* ]]; then
			# If version starts with ^, we just take the first number before the dot
			echo "$version" | sed -E 's/^\^([0-9]+)\..*/\1/'
		else
			# Otherwise just print the version
			echo "$version"
		fi
	else
		fail "No version found in $file_path"
	fi
else
	fail "File not found: $file_path"
fi
